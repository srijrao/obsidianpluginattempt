{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
